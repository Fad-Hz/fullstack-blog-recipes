<div class="container my-5 animate-fade-up">
    <div class="row justify-content-center">
        <!-- Kontainer Kartu untuk Resep dengan lebar 95% layar -->
        <div class="col-lg-10 col-md-11">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="row g-0">
                    <!-- Bagian Gambar -->
                    <div class="col-md-5">
                        <img src="<%= recipe.images %>" 
                             alt="<%= recipe.name %>" 
                             class="img-fluid h-100"
                             style="object-fit: cover;">
                    </div>
                    <!-- Bagian Detail Resep -->
                    <div class="col-md-7">
                        <div class="card-body p-4">
                            <h1 class="card-title text-primary fw-bold"><%= recipe.name %></h1>
                            <h5 class="text-secondary mb-2">
                                <span class="text-uppercase fw-bold">Kategori:</span> <%= recipe.category.name %>
                            </h5>
                            <p class="text-muted mb-4">
                                <i class="bi bi-envelope"></i> <%= recipe.email %>
                            </p>
                            <p class="fs-5">
                                <strong class="text-uppercase text-dark">Deskripsi:</strong> 
                                <%= recipe.description %>
                            </p>
                            <hr class="text-muted">
                            <h6 class="fw-bold text-dark mb-3">Bahan-Bahan:</h6>
                            <ul class="list-group list-group-flush">
                                <% recipe.ingredients.forEach(ingredient => { %>
                                    <li class="list-group-item bg-light"><%= ingredient %></li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tombol Kembali ke Beranda -->
    <div class="text-center mt-5">
        <a href="/#recipes" class="btn btn-outline-primary btn-lg px-5 rounded-pill shadow-sm">Kembali ke Beranda</a>
    </div>
</div>
