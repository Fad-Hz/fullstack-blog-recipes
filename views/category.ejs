<div class="categories-section py-5 bg-light animate-fade-up">
    <div class="container text-center">
        <!-- Section Title -->
        <h1 class="fw-bold mb-4">Categories</h1>

        <% if (!categories) { %>
            <!-- Empty State -->
            <div class="alert alert-warning" role="alert">
                No categories found. Please add some categories.
            </div>
            <% } else { %>
                <!-- Categories Grid -->
                <div class="row g-4">

                    <div class="row g-4">
                        <% categories.forEach(category=> { %>
                            <div class="col-6 col-md-4 col-lg-3">
                                <a href="/categories/<%= category._id %>" class="text-decoration-none">
                                    <div class="card shadow-sm h-100">
                                        <img src="<%= category.image %>" class="card-img-top"
                                            alt="<%= category.name %>">
                                        <div class="card-body">
                                            <h5 class="card-title text-dark">
                                                <%= category.name %>
                                            </h5>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <% }) %>
                    </div>

                </div>
                <% } %>
    </div>
</div>